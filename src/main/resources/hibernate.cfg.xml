<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.enable_lazy_load_no_trans">true</property>
        <property name="hibernate.dialect"> org.hibernate.dialect.PostgreSQL9Dialect </property>
        <property name="hibernate.connection.driver_class"> org.postgresql.Driver </property>
        <property name="hibernate.connection.url"> jdbc:postgresql://localhost:5432/kymaran_crud_app_hibernate</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">password</property>
        <mapping class="com.kyamran.app.model.Label"/>
        <mapping class="com.kyamran.app.model.Post"/>
        <mapping class="com.kyamran.app.model.Writer"/>
    </session-factory>
</hibernate-configuration>
